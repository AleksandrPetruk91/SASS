 }}

<div class='page'>
  <div class='header'>
    <div class='section__content'>
      {{#with header}}
        <header class='header_content'>

          <div class='header__block'>
            <img
              src='/svg/apple.svg'
              alt='Apple'
              class='header__icon'
            />

            <nav class='header__block'>
              {{#each links}}
                <a
                  href='{{url}}'
                  class='header__link'
                >{{text}}</a>
              {{/each}}
            </nav>
          </div>

          <div class='header__block'>
            <img
              src='/svg/search.svg'
              alt='Apple'
              class='header__icon'
            />
            <img
              src='/svg/profile.svg'
              alt='Apple'
              class='header__icon'
            />
          </div>
        </header>
      {{/with}}
    </div>
  </div>

  <section class="section_add">
    <div class="section_add_content">
      {{#with header}}
        {{#ad}}
          <div class="ad_title">{{title}}</div>
          <div class="product__action">
            {{#with link}}
              <a class="ad_link product__link header__icon" href="{{url}}">{{text}}</a>
            {{/with}}
          </div>

        {{/ad}}
      {{/with}}
    </div>
  </section>

  <section class='product product-big product--iphone-pro product--dark product--top'>
    {{#with iphone_pro}}
      <div class='product__content'>
        <h1 class='product__title'>{{title}}</h1>
        <p class='product__description'>{{descriptions}}</p>
        <div class='product__action'>
          {{#with link}}
            {{#each text}}
              <a href="{{../link}}" class="product__link">{{this}}</a>
            {{/each}}
          {{/with}}

        </div>
      </div>
    {{/with}}
  </section>

